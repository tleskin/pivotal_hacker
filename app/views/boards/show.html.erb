<div class="row">
      <div class="col s3">
        <h5>Backlog</h5>
        <% @tickets.backlog.each do |ticket| %>
        <ul>
          <li><strong><%= ticket.title %></strong><br>
          <%= ticket.description %></li>
        </ul>
        <% end %>
      </div>

      <div class="col s3">
        <h5>Current Sprint</h5>
        <% @tickets.current_sprint.each do |ticket| %>
        <ul>
          <li><strong><%= ticket.title %></strong><br>
            <%= ticket.description %></li>
        </ul>
        <% end %>
      </div>

      <div class="col s3">
        <h5>In Progress</h5>
        <% @tickets.in_progress.each do |ticket| %>
        <ul>
          <li><strong><%= ticket.title %></strong><br>
            <%= ticket.description %></li>
        </ul>
        <% end %>
      </div>

      <div class="col s3">
        <h5>Done</h5>
        <% @tickets.done.each do |ticket| %>
        <ul>
          <li><strong><%= ticket.title %></strong><br>
            <%= ticket.description %></li>
        </ul>
        <% end %>
      </div>
</div>
